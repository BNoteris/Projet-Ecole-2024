    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Projet2023"
    Shell.FlyoutBehavior="Disabled"
    Title="Projet2023">
<TabBar>
    
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate local:Student_ListView}"
        Route="Student_ListView" />
    <ShellContent
        Title="Teacher"
        ContentTemplate="{DataTemplate local:Teacher_ListView}"
        Route="Teacher_ListView" />
     <ShellContent
        Title="Activity"
        ContentTemplate="{DataTemplate local:Activity_ListView}"
        Route="Activity" />
</TabBar>
</Shell>
